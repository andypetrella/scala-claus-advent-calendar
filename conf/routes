# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /talk                       controllers.Application.talk(currentDay:Int = 1)
GET     /talk/:currentDay           controllers.Application.talk(currentDay:Int)

GET     /cal                        controllers.Application.day(day:Int)
POST    /cal/:day/:start/:end       controllers.Application.save(day:Int, start:Int, end:Int, file:String)

# JS routes
GET     /js                         controllers.Application.js

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
